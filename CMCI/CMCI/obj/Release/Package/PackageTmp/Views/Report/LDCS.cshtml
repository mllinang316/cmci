
@{
    ViewBag.Title = "LDCS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#UploadLDCSModal"><span class="fas fa-upload"></span>&nbsp; Upload LDCS</button>
    </div>
</div>

<div class="modal fade" role="dialog" id="UploadModal">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Import LDCS File</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="POST" id="ExcelForm" action="ImportFromExcel" enctype="multipart/form-data">
                <div class="modal-body" id="divModalBody">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Local Government Unit :</label>
                        </div>
                        <div class="col-md-6">
                            <select class="form-control" name="lguId" id="lguId" required>
                                @foreach(var item in ViewBag.LGUList)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <label>Year Covered :</label>
                        </div>
                        <div class="col-md-6">
                            <select class="form-control" name="yearCovered" id="yearCovered" required>
                                @for(int i = 2019;i <= 2050; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <input type="file" name="uploadedFile" id="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" required />
                        </div>
                    </div>
                    <input type="hidden" name="reportType" id="reportType" value="2" />
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" id="id" required />
                    <button type="submit" class="btn btn-primary" id="btnSubmitUpload">Submit</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </form>

        </div>
    </div>
</div>

